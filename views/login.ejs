<html>
  <head>
    <title>Log in</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="flex justify-center"><%- include ('header') %></div>
    <div class="flex flex-col justify-center items-center p-4">
      <div class="flex flex-col justify-center md:w-1/5 w-full">
        <h1 class="text-2xl flex justify-center font-semibold">Log into account</h1>
        <form action="/session" method="post" class="flex flex-col gap-4 pt-6">
          <div class="flex flex-col">
            <label for="email">Email</label>
            <input
              class="border-2 border-black p-2"
              type="text"
              name="email"
              id="email"
            />
          </div>
          <div class="flex flex-col">
            <label for="password">Password</label>
            <input
              class="border-2 border-black p-2"
              type="password"
              name="password"
              id="password"
            />
          </div>
          <button
            class="bg-blue-500 transition duration-200 border-2 border-black p-2 hover:bg-blue-300 mt-8"
            type="submit"
          >
            Log In
          </button>
        </form>
        <div class="flex flex-col justify-center pt-4 items-center">
          <p>Doesn't have an account?</p>
          <a
            class="bg-orange-200 border-2 px-8 border-black hover:bg-orange-400 p-1"
            href="/signup"
            >Sign Up</a
          >
        </div>
      </div>
    </div>
  </body>
</html>
