<html>
  <head>
    <title>Online Voting Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
      integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body class="bg-grey- h-full w-full">
    <div class="flex justify-center text-blue-800">
      <%- include ('updatedHeader', {username: username}) %>
    </div>
    <div class="flex flex-col justify-center items-center p-4">
      <div class="flex flex-col justify-center md:w-2/5 w-full">
        <hr />
        <div class="pt-6 flex justify-between">
          <p class="font-bold text-2xl  ">Your Elections</p>
          <a
            href="/elections/new"
            class="bg-orange-500 hover:bg-orange-300 border-2 rounded-lg p-2 text-white"
          >
            <i class="fa fa-plus"></i> New Election
          </a>
        </div>
        <!-- List of Elections -->
        <div><%- include ('elections.ejs') %></div>
      </div>
    </div>
  </body>
</html>
